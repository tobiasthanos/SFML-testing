INCLUDE = -I/usr/include/
LIBDIR  = -L/usr/X11R6/lib -L/usr/local/lib/SFML -L/usr/lib



COMPILERFLAGS = -Wall -g -DGL_GLEXT_PROTOTYPES 
CC = g++
CFLAGS = $(COMPILERFLAGS) $(INCLUDE) 
LFLAGS = $(COMPILERFLAGS) 
LIBRARIES = -fpermissive -lopenal -lsndfile -lXrandr -lpthread -lrt -lfreetype -lGLEW -ljpeg -lGL -lGLU -lSM -lICE -lX11 -lXext -llua5.1 -ldl -lsfgui -lsfml-graphics -lsfml-window -lsfml-system

all: $(basename main.cpp)

main : main.o 
	$(CC) $(CFLAGS) -o  $@ $(LIBDIR) $< $(LIBRARIES)  

clean:
	rm main
	rm main.o

